<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="visible_tab_count" format="integer"/>
    <declare-styleable name="ViewPagerIndicator">
        <attr name="visible_tab_count"/>
    </declare-styleable>

    <declare-styleable name="WatchView">
        <attr name="watchRadius" format="dimension"/>
        <attr name="watchPadding" format="dimension"/>
        <attr name="watchScalePadding" format="dimension"/>
        <attr name="watchScaleColor" format="color|reference"/>
        <attr name="watchScaleLength" format="dimension|reference"/>
        <attr name="watchHourScaleColor" format="dimension|reference"/>
        <attr name="watchHourScaleLength" format="dimension|reference"/>
        <attr name="hourPointColor" format="color|reference"/>
        <attr name="hourPointLength" format="dimension|reference"/>
        <attr name="minutePointColor" format="color|reference"/>
        <attr name="minutePointLength" format="dimension|reference"/>
        <attr name="secondPointColor" format="color|reference"/>
        <attr name="secondPointLength" format="dimension|reference"/>
        <attr name="timeTextSize" format="dimension|reference"/>
        <attr name="timeTextColor" format="color|reference"/>
    </declare-styleable>

    <declare-styleable name="LineChart">
        <attr name="dotNum" format="integer" />
        <attr name="lineColor" format="color|reference" />
        <attr name="dotRadius" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="CircleScaleView">
        <attr name="lifeCostColor" format="color|reference" />
        <attr name="communicateCostColor" format="color|reference" />
        <attr name="trafficCostColor" format="color|reference" />
        <attr name="entertainmentCostColor" format="color|reference" />
        <attr name="circleWidth" format="dimension" />
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DropdownLayout">
        <attr name="dropSpeed" format="integer"/>
    </declare-styleable>
</resources>
